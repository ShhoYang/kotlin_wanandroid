<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg_white"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateDrawable="@drawable/load_progress"
            android:indeterminateTint="?attr/loadingDialogIconColor" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="?attr/loadingDialogMessageText"
        android:textColor="?loadingDialogMessageTextColor"
        android:textSize="?loadingDialogMessageTextSize" />
</LinearLayout>



